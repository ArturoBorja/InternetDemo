<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    card_view:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    card_view:cardCornerRadius="15dp"

    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_dark_background"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_itemrecycle_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start"
                android:padding="5dp"
                android:text="TITLE-2019"
                android:layout_weight="7"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/txt_itemrecycle_pages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:padding="5dp"
                android:layout_weight="3"
                android:text="Pag-2000"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_itemrecycle_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Era un libro muyy interesante basado en absolutamente nada"
            android:textSize="14sp"
            android:textColor="#FFFFFF"/>
        <TextView
            android:id="@+id/txt_itemrecycle_autor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Autor: Arturo Borja, Marcia Luque"
            android:textSize="12sp"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btn_itemrecycle_buy"
            android:text="Buy"
            android:visibility="invisible"
            style="@style/itemrecycle_button" />


    </LinearLayout>
</androidx.cardview.widget.CardView>